<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Accouont_Sold_To_Status_Sold</fullName>
    <active>true</active>
    <errorConditionFormula>AND( ISPICKVAL(Status__c, &quot;Sold&quot;), ISBLANK(  Account_Sold_To__c ))</errorConditionFormula>
    <errorDisplayField>Account_Sold_To__c</errorDisplayField>
    <errorMessage>Cannot be blank when Status selected is Sold.</errorMessage>
</ValidationRule>
