<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Buy_Date_Sell_Date</fullName>
    <active>true</active>
    <errorConditionFormula>AND( ISPICKVAL(Status__c, &quot;Sold&quot;), Sell_Date__c &lt; Buy_Date__c )</errorConditionFormula>
    <errorDisplayField>Sell_Date__c</errorDisplayField>
    <errorMessage>Sell Date cannot be before Buy Date.</errorMessage>
</ValidationRule>
